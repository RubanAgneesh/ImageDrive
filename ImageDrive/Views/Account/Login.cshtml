@using ImageDrive.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}

<div class="row">
    <div class="login-section">
        <div class="login-illustration">
            <img src="~/Assets/login-bg.png" alt="login" />
        </div>
        <div class="login-text">
            <section id="loginForm">
                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <h4>Log in</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(m => m.Email, new { @class = "control-label" })
                        <div class="input-field">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                        <div class="input-field">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="remember-me">
                            <div class="checkbox">
                                @Html.CheckBoxFor(m => m.RememberMe)
                                @Html.LabelFor(m => m.RememberMe)
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="">
                            <input type="submit" value="Log in" class="btn btn-default" />
                        </div>
                    </div>
                    @*<p class="seperator"><span>(OR)</span></p>
                <section id="socialLoginForm">
                    @Html.Partial("_ExternalLoginsListPartial", new ExternalLoginListViewModel { ReturnUrl = ViewBag.ReturnUrl })
                </section>*@

                    <p class="register-link">
                        <span>If you don't have an account please click</span>
                        @Html.ActionLink("Register", "Register")
                    </p>
                    @* Enable this once you have account confirmation enabled for password reset functionality
                <p>
                    @Html.ActionLink("Forgot your password?", "ForgotPassword")
                </p>*@
                }
            </section>
            <p class="seperator"><span>(OR)</span></p>
            <section id="socialLoginForm">
                @Html.Partial("_ExternalLoginsListPartial", new ExternalLoginListViewModel { ReturnUrl = ViewBag.ReturnUrl })
            </section>

        </div>



        
    </div>
    
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<style>
    .login-section {
        display: flex;
        align-items: center;
        justify-content: flex-start;
        background: #fff;
        box-shadow: 0 0 10px rgba(0,0,0,.2);
        margin: 50px 0;
        border-radius: 10px;
    }

    .login-illustration {
        background: #FAFBFC;
        padding: 20px 30px;
        border-radius: 10px 0 0 10px;
        display: flex;
        justify-content: space-around;
        width: 50%;
    }

        .login-illustration img {
            max-width: 420px;
        }

    .login-text {
        width: 400px;
        margin: 0 auto;
    }

    form h4 {
        font-size: 36px;
        font-weight: 600;
    }

    .form-group {
        display: flex;
        align-items: center;
        flex-wrap: wrap;
        margin: 0 0 8px !important;
    }

        .form-group label {
            margin-right: 20px;
            min-width: 100px;
            text-align: left !important;
        }

        .form-group .input-field {
            width: 100%;
            margin-top: 5px;
        }

    .input-field input[type="text"], .input-field input[type="password"] {
        max-width: none;
    }

    .remember-me {
        margin-left: 20px;
        margin-top: -8px;
    }

        .remember-me .checkbox label {
            padding: 0;
            font-size: 13px;
        }

    .form-group input[type="submit"] {
        background: #553CFB;
        color: #fff;
        padding: 10px 40px;
        margin-top: 10px;
        width: 400px;
        max-width: none;
    }

    #socialLoginForm {
        display: flex;
        align-items: center;
    }

        #socialLoginForm img {
            width: 40px;
        }

    .seperator {
        display: flex;
        align-items: center;
        margin-top: 20px;
    }

        .seperator span {
            margin: 0 10px;
        }

        .seperator::before, .seperator::after {
            width: 200px;
            height: 1px;
            background: #ccc;
            content: "";
            display: flex;
        }

    .register-link {
        font-size: 13px;
    }

    #socialLoginlist button {
        background: url("../../Assets/google-logo.png") no-repeat;
        padding: 6px 0 6px 35px;
        background-size: 25px;
        background-position: 8px 4px;
        width: 400px;
        margin-left: 3px;
    }
</style>